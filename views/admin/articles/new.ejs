<%- include ("../../partials/head.ejs") %> <%- include
("../../partials/adminNavbar.ejs") %>

<body>
  <div class="container">
    <hr />
    <div class="card">
      <div class="card-header">
        <h2>Novo artigo</h2>
      </div>
      <div class="card-body">
        <form action="/articles/save" method="post">
          <input
            class="form-control"
            type="text"
            name="title"
            placeholder="Defina o tÃ­tulo do artigo"
          />
          <br />
          <textarea
            class="form-control"
            name="body"
            placeholder="Escreva seu artigo aqui!"
            id="article"
          ></textarea>
          <hr>
          <label for="category">Categoria</label>
          <select name="category" class="form-control">
            <% categories.forEach((category)=>{ %>
            <option value="<%= category.id %>"><%= category.title %></option>
            <% }) %>
          </select>
          <br />
          <button class="btn btn-success">Cadastrar</button>
        </form>
      </div>
    </div>
  </div>
</body>

<%- include ("../../partials/footer.ejs") %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
  tinymce.init({
    selector: "#article",
    plugins: [
      "advlist",
      "autolink",
      "link",
      "image",
      "lists",
      "preview",
      "searchreplace",
      "wordcount",
      "fullscreen",
      "insertdatetime",
      "media",
      "save",
      "table",
      "emoticons",
    ],
  });
</script>
